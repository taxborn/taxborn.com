---
import "../styles/global.css";
import profile from "../assets/img/profile.webp";

import { Font } from "astro:assets";
import { Image } from "astro:assets";

import Navigation from "@components/Navigation.astro";
import Footer from "@components/Footer.astro";

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />

        <title>braxton fair - {title}</title>

        <Font cssVariable="--font-jetbrains-mono" preload />
    </head>
    <body class="bg-[#1e1e2e] text-[#cdd6f4] font-mono">
        <div class="container mx-auto max-w-4xl p-2">
            <header>
                <section class="my-8">
                    <Image
                        src={profile}
                        alt="Profile picture"
                        class="rounded-full w-20 md:w-24 inline-block"
                    />
                    <p
                        class="inline-block text-2xl md:text-5xl font-black mb-0 content-center align-middle border-b-2 border-[#cba6f7]"
                    >
                        Braxton Fair
                    </p>
                </section>

                <Navigation />
            </header>

            <main class="my-4">
                <slot />
            </main>

            <Footer />
        </div>
    </body>
</html>

<style>
    @layer components {
    }
</style>
